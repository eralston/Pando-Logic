@using PandoLogic.Models
@model Strategy

@{
    ViewBag.Title = "Adopt Strategy";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
        new Crumb("Strategies", Url.Action("Index","Strategies"), "fa-puzzle-piece"),
        new Crumb("Strategy Details", Url.Action("Details","Strategies", new { id = Model.Id})),
        new Crumb("Adopt Strategy")
    });
}
<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Adopt Strategy</h3>
            </div>
            <div class="box-body">
                <p class="text-muted">
                    Adopting this strategy will cause its goals and tasks to be copied into your company
                </p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <button class="btn btn-primary">
                        Adopt Strategy
                    </button>
                    @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                }

            </div>
            @Html.Partial("_StrategyDetails", Model)
        </div>
    </div>
</div>
