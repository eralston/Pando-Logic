@model PandoLogic.Models.Strategy

@{
    ViewBag.Title = string.Format("Delete {0}", Model.Title);
    ViewBag.TitleMinor = "Delete Strategy";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
        new Crumb("Strategies", Url.Action("Index","Strategies"), "fa-puzzle-piece"),
        new Crumb("Strategy Details", Url.Action("Details", "Strategies", new { id = Model.Id}), ""),
        new Crumb("Delete Strategy")
    });
}
<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Delete @Model.Title</h3>
            </div>
            <div class="box-body">
                <div>
                    <span class="lead">
                        Are You Sure You Want to Delete This Strategy?
                    </span>
                </div>
                @Html.Partial("_StrategyDetails", Model)
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete Strategy" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
