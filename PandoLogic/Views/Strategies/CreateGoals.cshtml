@using PandoLogic.Controllers
@model StrategyViewModel

@{
    ViewBag.Title = "Create Goals for Strategy";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Creates Goals for Strategy "@Html.DisplayFor(s => s.Title)"</h3>
            </div>
            <div class="callout callout-info">
                <p class="text-light-blue">Summary</p>
                <p>
                    @Html.DisplayFor(s => s.Summary)
                </p>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-light-blue">Description</p>
                    <p>
                        @Html.DisplayFor(s => s.Description)
                    </p>
                }
            </div>


            @using (Html.BeginForm())
            {
                <div class="box-body">
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(s => s.Id)
                    @Html.HiddenFor(s=> s.Title)
                    @Html.HiddenFor(s=>s.Summary)
                    @Html.HiddenFor(s=> s.Description)

                    <div class="form-group">
                        @Html.LabelFor(s => s.Interval)
                        @Html.EnumDropDownListFor(s => s.Interval, new { @class = "form-control" })
                    </div>
                </div>

                <div id="goals" class="dynamic-child-list">
                    @Html.EditorFor(model => model.StrategyGoals)
                </div>

                <div class="box-body">
                    <div class="form-group">
                        @Html.AddLink("Add Goal", "#goals", ".goal", "StrategyGoals", typeof(StrategyGoalViewModel), "btn btn-default")
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">
                            Save Goals
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
