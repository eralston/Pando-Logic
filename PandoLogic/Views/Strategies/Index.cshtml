@using PandoLogic.Models
@model IEnumerable<Strategy>

@{
    ViewBag.Title = "Strategies";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
        new Crumb("Strategies", "", "fa-puzzle-piece")
    });
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-puzzle-piece"></i>
                <h3 class="box-title">My Strategies</h3>
            </div>
            <div class="box-body">
                <p class="text-muted">
                    Strategies you created
                </p>
                @Html.ActionLink("Create New Strategy", "Create", null, new { @class = "btn btn-primary" })
            </div>
            <div class="box-body  no-padding">
                @Html.Partial("_StrategyTable", ViewBag.MyStrategies as IEnumerable<Strategy>)
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-bookmark"></i>
                <h3 class="box-title">Bookmarked Strategies</h3>
            </div>
            <div class="box-body">
                <p class="text-muted">
                    Strategies marked for later reference
                </p>
            </div>
            <div class="box-body no-padding">
                @Html.Partial("_StrategyTable", ViewBag.BookmarkedStrategies as IEnumerable<Strategy>)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-puzzle-piece"></i>
                <h3 class="box-title">
                    <a href="@Url.Action("Exchange")" class="force-a">
                        Latest from the Strategy Exchange
                    </a>
                </h3>
            </div>
            <div class="box-body">
                <p class="text-muted">
                    Strategies recently added to the public strategy exchange
                </p>
            </div>
            <div class="box-body no-padding">
                @Html.Partial("_StrategyTable", Model)
            </div>
        </div>
    </div>
</div>

