@model PandoLogic.Controllers.CompanyViewModel

@{
    ViewBag.Title = string.Format("Delete {0}", Model.Name);
    ViewBag.TitleMinor = "Delete Company";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
            new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
            new Crumb("Companies", Url.Action("Index","Companies"), "fa-building-o"),
            new Crumb("Company Details", Url.Action("Details","Companies", new { id = Model.Id })),
            new Crumb("Delete Company")
        });
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Are you sure you want to delete @ViewBag.Title?</h3>
            </div>
            <div class="box-body">
                <p class="text-muted">
                    This will cancel your monthly subscription, disband the team, and cause all data to be removed from the system. Are you sure you want to delete this company?
                </p>
                @Html.Partial("_Details", Model)
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Cancel Plan &amp; Delete Company" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">

    </div>
</div>
