@model PandoLogic.Models.Company

@{
    ViewBag.Title = string.Format("Revoke Invite for {0}", ViewBag.MemberInviteEmail);
    ViewBag.TitleMinor = "Revoke Invite";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
            new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
            new Crumb("Companies", Url.Action("Index","Companies"), "fa-building-o"),
            new Crumb("Company Details", Url.Action("Details","Companies", new { id = Model.Id })),
            new Crumb("Revoke Invite")
        });
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <div class="box-body">
                <dl>
                    <dt>E-Mail</dt>
                    <dd>@ViewBag.MemberInviteEmail</dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Revoke Invite" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">

    </div>
</div>
