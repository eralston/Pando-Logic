@using PandoLogic.Controllers
@model AddressViewModel
@{
    ViewBag.Title = "Company Address";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="form-box" id="login-box">
    <div class="header">@ViewBag.Title</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(a => a.ParentEntityId)

        <div class="body bg-gray">
            @Html.ValidationSummary(true, "", new { @class = "" })

            <div class="form-group">
                @Html.LabelFor(model => model.Address1, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Address1) } })
                @Html.ValidationMessageFor(model => model.Address1, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address2, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Address2) } })
                @Html.ValidationMessageFor(model => model.Address2, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.City) } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StateOrProvince, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.StateOrProvince, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.StateOrProvince) } })
                @Html.ValidationMessageFor(model => model.StateOrProvince, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PostalCode, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.PostalCode) } })
                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Country) } })
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.Type, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "" })
            </div>
        </div>

        <div class="footer">
            <button type="submit" class="btn btn-primary btn-block">Save &amp; Continue</button>
        </div>
    }
</div>

