@model IEnumerable<PandoLogic.Models.Activity>

@{
    Layout = null;
}

<div class="box box-primary">
    <div class="box-header">
        <i class="fa fa-list-ul"></i>
        <a href="@Url.Action("Index","Activities")">
            <h3 class="box-title force-a">Recent Activity</h3>
        </a>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12"> 
                <p class="text-muted">
                    The most recent actions in the system by you or any member of the @ViewBag.CurrentUserSelectedCompanyName team
                </p>               
                @Html.Partial("_Timeline", Model)
            </div>
        </div>
    </div>
</div>

