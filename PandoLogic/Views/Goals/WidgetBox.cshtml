@using PandoLogic.Models
@model Goal[]

@{
    Layout = null;
}

@for (int i = 0; i < Math.Ceiling(((float)Model.Length / 4f)); ++i)
{
    <div class="row">
        @for (int j = 0; j < 4 && ((i * 4) + j < Model.Length); ++j)
        {
            int index = (i * 4) + j;
            Goal goal = Model[index];

            <div class="col-lg-3 col-xs-6">
                @Html.Partial("~/Views/Shared/DisplayTemplates/Goal.cshtml", goal)
            </div>
        }
    </div>
}