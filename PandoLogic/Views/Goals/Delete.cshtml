@model PandoLogic.Models.Goal

@{
    ViewBag.Title = string.Format("Delete {0}", Model.Title);
    ViewBag.TitleMinor = "Delete Goal";

    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("Dashboard", Url.Action("Index","Home"), "fa-dashboard"),
        new Crumb("Goals", Url.Action("Index","Goals"), "fa-check"),
        new Crumb("Goal Details", Url.Action("Details", "Goals", new { id = Model.Id}), ""),
        new Crumb("Delete Goal")
    });
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Delete @Model.Title</h3>
            </div>
            <div class="box-body">
                <div>
                    <span class="lead">
                        Are You Sure You Want to Delete This Goal?
                    </span>
                </div>
                @Html.Partial("_GoalDetails", Model)
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete Goal" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                    </div>
                }
            </div>
        </div>
    </div>
</div>