@using PandoLogic.Models
@model PandoLogic.Models.Goal

<dl class="dl-horizontal">

    <dt>
        @Html.DisplayNameFor(model => model.Title)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Title)
    </dd>

    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    }

    <dt>
        @Html.DisplayNameFor(model => model.CreatedDateUtc)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.CreatedDateUtc)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.DueDateUtc)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.DueDateUtc)
    </dd>

    <dt>
        Status
    </dt>

    <dd>
        @if (Model.ArchiveDateUtc.HasValue)
        {
            <span>Archived on @Model.ArchiveDateUtc.Value.ToString("d")</span>
        }
        else
        {
            if (ViewBag.GoalProgress == "100")
            {
                <span>Complete</span>
            }
            else
            {
                <span>Incomplete</span>
            }
        }
        
    </dd>
</dl>