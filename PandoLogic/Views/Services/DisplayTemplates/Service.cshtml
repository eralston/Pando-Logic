@model PandoLogic.Models.Service

<div class="col-md-4">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">@Model.Title</h3>
        </div>

        <div class="box-body">
            <p>
                @Model.Description
            </p>

            <a class="btn btn-primary" href="@Url.Action("Order", new { id = Model.Id })">
            Order Now - <strong>$@Model.Price</strong>
            </a>
        </div>

    </div>
</div>