@model IEnumerable<PandoLogic.Models.Subscription>

@{
    ViewBag.Title = "Subscriptions";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Subscription", "Create")
</p>
<p>
    Paying accounts possessed by users and paying toward a plan
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plan.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActiveUntil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveUntil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
