@model PandoLogic.Models.WorkItem

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Delete Task</h3>
            </div>
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    }
                    
                    <dt>
                        Creator
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Creator.FullName)
                    </dd>

                    @if (Model.Assignee != null)
                    {
                        <dt>
                            Assignee
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Assignee.FullName)
                        </dd>
                    }

                    <dt>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DueDate)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete Task" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Details", new { id = Model.Id })
                    </div>
                }
            </div>
        </div>
    </div>
</div>