@using PandoLogic.Models
@model IEnumerable<WorkItem>

@{
    string title = @ViewBag.TaskBoxTitle ?? "Tasks";

    DateTime now = DateTime.UtcNow;
}

<div class="box box-primary">
    <div class="box-header">
        <i class="fa fa-check"></i>
        <h3 class="box-title">@title</h3>
    </div>

    <div class="box-body">
        <p class="text-muted">
            Tasks waiting for your action from @ViewBag.CurrentUserSelectedCompanyName
        </p>
        @if (ViewBag.AllowCreateNewTaskBox ?? true)
        {
            @Html.ActionLink("Create New Task", "Create", "Tasks", new { id = ViewBag.GoalId }, new { @class = "btn btn-primary" })
        }
    </div>

    <div class="box-body no-padding">
        <div class="table-responsive">
            <table class="table table-condensed">
                <tbody>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Due Date</th>
                    </tr>

                    @foreach (WorkItem item in Model)
                    {
                        bool isDone = item.CompletedDateUtc.HasValue;
                        string rowClass = isDone ? "done" : "";
                        <tr class="@rowClass">
                            <td>
                                @if (isDone)
                                {
                                    <input type="checkbox" id="task-@item.Id" data-task-id="@item.Id" class="task-check iCheck-helper" checked />
                                }
                                else
                                {
                                    <input type="checkbox" id="task-@item.Id" data-task-id="@item.Id" class="task-check iCheck-helper" />
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Tasks", new { id = item.Id })">
                                    @item.Title
                                </a>
                            </td>
                            <td>
                                @if (item.DueDateUtc < now)
                                {
                                    <i class="fa fa-warning" title="This task is overdue"></i>
                                }
                                @if (item.DueDateUtc.HasValue)
                                {
                                    <span>@item.DueDateUtc.Value.ToString("d")</span>
                                }
                                else
                                {
                                    <span>Unassigned</span>
                                }
                            </td>
                        </tr>
                    }
                    @{
                        bool? showAll = ViewBag.TaskBoxShowAll;
                    }
                    @if (showAll.HasValue && showAll.Value)
                    {
                        string showAllTitle = ViewBag.TaskBoxShowAllTitle ?? "Show All";

                        <tr>
                            <td colspan="3" class="text-center">
                                <a href="@ViewBag.TaskBoxShowAllUrl">
                                    @showAllTitle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>



            </table>
        </div>
    </div>
</div>
