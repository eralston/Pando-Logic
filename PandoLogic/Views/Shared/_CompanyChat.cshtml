@*Common Chat Code*@
<script id="chat_message_template" type="text/html">
    <div class="item">
        <img src="{{AvatarUrl}}" alt="user image" class="online" />
        <p class="message">
            <a href="{{UserUrl}}" class="name">
                <small class="text-muted pull-right"><i class="fa fa-clock-o"></i> @*{{date}}*@</small> {{FullName}}
            </a>
            {{Message}}
        </p>
    </div>
</script>
<script id="chat_user_template" type="text/html">
    <div class="item">
        <img src="{{AvatarUrl}}" alt="user image" class="online" />
        <p class="message">
            <a href="{{UserUrl}}" class="name">
                {{FullName}}
            </a>
        </p>
    </div>
</script>
<script src="~/scripts/jquery.pandochat.js" type="text/javascript"></script>
<script>
    var userId = "@ViewBag.CurrentUserId";
    $(".chat-box").pandochat({ userId: userId });
</script>
<script>
    @{
        bool isTeamChatAlwaysOpen = ViewBag.ForceTeamChat != null && ViewBag.ForceTeamChat == true;
    }

    function setupTeamChat() {
        $(".company-chat-toggle").click(function () {

            var $chat = $(".company-chat");

            if ($chat.is(":hidden")) {
                $chat.slideDown(300);
            } else {
                $chat.slideUp(300);
            }
        });
    }

    if ("@isTeamChatAlwaysOpen" == "True") {
        $(".company-chat-toggle").hide();
        $(".company-chat").show();
    }
    else {
        $(setupTeamChat);
    }
</script>